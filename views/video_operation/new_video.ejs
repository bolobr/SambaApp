<div class="col-md-6 box col-md-offset-3" ng-app="uploadModule" ng-controller="uploadController">
  <form action="/create" method="POST" enctype="multipart/form-data" id="video-create-form" class="form-signin">
	   <h2 class="form-signin-heading">Codifique um vídeo</h2>
	    <div class="control-group error">
          <label for="Nome do Vídeo">Nome do Vídeo</label>
          <input ng-model="uploadForm.name" ng-change="check_name()" type="text" class="form-control" placeholder="Nome do Vídeo" name="name" required>
          <span class="help-block has-error" ng-if='dirty == true'>
            <span ng-show="dirty == true">Name is already taken - Choose a new one so we can upload your file</span>
          </span>

	     </div>
      </br>
      <label for="Arquivo">Arquivo do Vídeo</label>

	     <input type="file" placeholder="your title" name="file" required>
     </br>

	    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Codificar Video"/>
	     <input type="hidden" name="_csrf" value="<%= _csrf %>" />
     </form>
</div>
