<div class="col-md-6 box col-md-offset-3" ng-app="uploadModule" ng-controller="uploadController">
  <form action="/create" method="POST" enctype="multipart/form-data" id="video-create-form" class="form-signin">
	   <h2 class="form-signin-heading">Codifique um vídeo</h2>

      </br>
      <label for="Arquivo">Arquivo do Vídeo</label>
      <input type="file" id="file_input" placeholder="File" name="file"  required>
     </br>

	    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Codificar Video" ng-click="upload()"/>
	     <input type="hidden" name="_csrf" value="<%= _csrf %>" />
     </form>

     <span class="help-block has-error" ng-if='uploading == true'>
       <span ng-show="uploading == true">Estamos subindo seu arquivo, não feche nem mude de página por enquanto</span>
     </span>
</div>
